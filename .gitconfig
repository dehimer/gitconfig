[user]
        name = Denis Novikov
        email = den-vse@yandex.ru
[http]
        sslVerify = false
[alias]
        co = checkout
        cob = checkout -b
        com = checkout master
        cod = checkout dev
        br = branch
        st = status
        cm = commit -m
        cp = cherry-pick
        amend = commit --amend -m
        po = push origin
        plo = pull origin
        plom = pull origin master
        plod = pull origin dev
        df = diff
        mm = merge master
        fo = fetch origin
        slog = log -n 10 --format=format:'%Creset%an %Cgreen%ar:%Creset%s %Cred%h'
        ci = !git add -A && git commit
        tracking = for-each-ref --format='%(refname:short) <- %(upstream:short)' refs/heads
        s = status --short
[core]
        editor = nano
[oh-my-zsh]
        prefix-length = 20
        prefix-regex = [^-]*-
        suffix-length = 8
        max-branch-length = 30
